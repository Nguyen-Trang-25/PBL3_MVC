@{
    Layout = null;
    ViewData["Title"] = "Trang Chủ - Tìm Gia Sư";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>
<body>
    <!-- Header -->
    <div id="header-container"></div>

    <!-- Account Form -->
    <div id="reg-log-container"></div>

    <!-- Home -->
    <section class="home-content">
        <!-- Hero Section -->
        <div class="hero">
            <img src="@Url.Content("~/images/home_banner.jpg")" alt="Gia sư và học viên" class="hero-image">
            <div class="hero-text">
                <h1>Tìm Gia Sư & Học Viên Dễ Dàng</h1>
                <p>Kết nối nhanh chóng giữa học viên và gia sư chuyên nghiệp</p>
                <div class="hero-buttons">
                    <button class="btn-primary">Tìm Gia Sư</button>
                    <button class="btn-primary">Tìm Học Viên</button>
                </div>
            </div>
        </div>

        <!-- Search Section -->
        <div class="search-box">
            <input type="text" placeholder="Nhập môn học hoặc khu vực..." class="search-input" />
            <button class="btn-search">🔍 Tìm kiếm</button>
        </div>

        <!-- Categories -->
        <h2>Các môn học phổ biến</h2>

        <div class="categories">
            <div class="category-item"><div class="icon">📘</div><p>Toán học</p></div>
            <div class="category-item"><div class="icon">📚</div><p>Ngữ Văn</p></div>
            <div class="category-item"><div class="icon">🌍</div><p>Tiếng Anh</p></div>
            <div class="category-item"><div class="icon">🔬</div><p>Vật Lý</p></div>
            <div class="category-item"><div class="icon">🧪</div><p>Hóa học</p></div>
            <div class="category-item"><div class="icon">🧬</div><p>Sinh học</p></div>
            <div class="category-item"><div class="icon">💻</div><p>Tin học</p></div>
            <div class="category-item"><div class="icon">🎨</div><p>Năng khiếu</p></div>
        </div>

        <!-- Home courses -->
        <section class="home-courses">
            <h2>Các khóa học cơ bản</h2>

            <div class="home-courses-slider">
                <!-- Slide Item -->
                <div class="slide">
                    <div class="image"><div class="icon">📘</div></div>
                    <div class="content">
                        <h3>Kèm Toán học lớp 7</h3>
                        <p>Khóa học này giúp bạn học Toán từ cơ bản đến nâng cao.</p>
                        <a href="#" class="btn">Xem thêm</a>
                    </div>
                </div>
            </div>
        </section>
    </section>

    <!-- Footer -->
    <div id="footer-container"></div>

    <!-- Scripts -->
    <script src="@Url.Content("~/js/loadContent.js")" defer></script>
    <script src="@Url.Content("~/js/script.js")" defer></script>

</body>
</html>
